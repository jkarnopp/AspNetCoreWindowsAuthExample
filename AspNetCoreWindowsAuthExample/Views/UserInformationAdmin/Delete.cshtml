@model AspNetCoreWindowsAuthExample.ViewModels.UserInfoAdminEditViewModel

@{
    ViewData["Title"] = Model.Title;
}

<br /><br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-danger">
            <div class="panel-heading"><h2>@Model.Title</h2></div>

            @if (Model.Message != null)
            {
                <p class="alert-danger text-center">@Model.Message</p>
            }

            <br />
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.UserInformation.LanId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserInformation.LanId)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserInformation.FirstName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserInformation.FirstName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserInformation.LastName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserInformation.LastName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserInformation.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserInformation.Email)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserInformation.Enabled)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserInformation.Enabled)
                    </dd>
                </dl>
                <hr />
                <label>Roles</label>
                <div class="row">
                    @{
                        int cnt = 0;
                        foreach (var userRole in Model.AssignedRoleDatas)
                        {
                            if (cnt++ % 3 == 0)
                            {

                            @:</div><div class="row">

                            }

                            <div class="col-md-4">

                                <input type="checkbox"
                                       name="selectedUserRoles"
                                       value="@userRole.UserRoleId"
                                       @(Html.Raw(userRole.Assigned ? "checked=\"checked\"" : "")) />
                                @userRole.UserRoleId @userRole.Name
                            </div>

                        }
                    }
                </div>
                <hr />

                <form asp-action="Delete">
                    <input type="hidden" asp-for="UserInformation.UserInformationId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
            <div class="panel-footer">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>